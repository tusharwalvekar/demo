        <name>PL - Limit winners</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
	if (isLoading || newValue === '') {
		return;
	}
	// Number of players selected for a team, if two players selected, count = 1
	var count = (newValue.match(/,/g) || []).length;
	
	if (count > 1 && g_form.getValue('match_type') == 2) {
		// Remove third player
		var twoPrevious = newValue.replace(/,[^,]+$/, "");
		g_form.setValue('winners', twoPrevious);
		g_form.addErrorMessage('For a Doubles match, only two players can be selected.');
	}
}]]></script>
